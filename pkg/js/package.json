{
  "name": "@openfga/syntax-transformer",
  "version": "0.2.0-beta.4",
  "description": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build:ts": "rm -rf dist/ && tsc --outDir dist/",
    "build:light": "tsc --outDir dist/",
    "build": "npm run build:ts",
    "build:npx": "tsc --build tsconfig.json",
    "clean": "rm -r dist/",
    "prepublishOnly": "npm run build && cp ../../README.md . && cp ../../LICENSE .",
    "postpublish": "rm -f README.md LICENSE",
    "test": "jest --config ./jest.config.js",
    "typecheck": "tsc  --skipLibCheck",
    "lint": "eslint -c .eslintrc.js --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "format:check": "prettier --check **/*.ts",
    "format:fix": "prettier --write **/*.ts"
  },
  "keywords": [
    "openfga",
    "authorization",
    "fga",
    "fine-grained-authorization",
    "rebac",
    "zanzibar"
  ],
  "author": "OpenFGA",
  "dependencies": {
    "antlr4": "^4.13.1"
  },
  "devDependencies": {
    "@openfga/sdk": "^0.3.0-beta.1",
    "@types/jest": "^29.5.7",
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "yaml": "^2.3.3"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com:openfga/language.git"
  },
  "bugs": {
    "url": "https://github.com/openfga/language/issues"
  },
  "homepage": "https://github.com/openfga/language#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
